# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[**.js]
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

